<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.input.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8.0.111"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="splitstree5.tools.phyloedit.PhyloEditorWindowController">
    <children>
        <BorderPane fx:id="borderPane" prefHeight="200.0" prefWidth="200.0" AnchorPane.bottomAnchor="0.0"
                    AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <top>
                <VBox fx:id="topVBox" BorderPane.alignment="CENTER">
                    <children>
                        <MenuBar fx:id="menuBar">
                            <menus>
                                <Menu fx:id="fileMenu" mnemonicParsing="false" text="File">
                                    <items>
                                        <MenuItem fx:id="newMenuItem" mnemonicParsing="false" text="New...">
                                            <accelerator>
                                                <KeyCodeCombination alt="UP" code="N" control="UP" meta="UP" shift="UP"
                                                                    shortcut="DOWN"/>
                                            </accelerator>
                                        </MenuItem>
                                        <SeparatorMenuItem mnemonicParsing="false"/>
                                        <MenuItem fx:id="openMenuItem" mnemonicParsing="false" text="Open...">
                                            <accelerator>
                                                <KeyCodeCombination alt="UP" code="O" control="UP" meta="UP" shift="UP"
                                                                    shortcut="DOWN"/>
                                            </accelerator>
                                        </MenuItem>
                                        <Menu fx:id="recentMenu" mnemonicParsing="false" text="Recent"/>
                                        <SeparatorMenuItem mnemonicParsing="false"/>
                                        <MenuItem fx:id="saveAsMenuItem" mnemonicParsing="false" text="Save As...">
                                            <accelerator>
                                                <KeyCodeCombination alt="UP" code="S" control="UP" meta="UP" shift="UP"
                                                                    shortcut="DOWN"/>
                                            </accelerator>
                                        </MenuItem>
                                        <MenuItem fx:id="exportMenuItem" mnemonicParsing="false" text="Export...">
                                            <accelerator>
                                                <KeyCodeCombination alt="UP" code="S" control="UP" meta="UP"
                                                                    shift="DOWN" shortcut="DOWN"/>
                                            </accelerator>
                                        </MenuItem>
                                        <SeparatorMenuItem mnemonicParsing="false"/>
                                        <MenuItem fx:id="printMenuItem" mnemonicParsing="false" text="Print...">
                                            <accelerator>
                                                <KeyCodeCombination alt="UP" code="P" control="UP" meta="UP" shift="UP"
                                                                    shortcut="DOWN"/>
                                            </accelerator>
                                        </MenuItem>
                                        <MenuItem fx:id="pageSetupMenuItem" mnemonicParsing="false"
                                                  text="Page Setup...">
                                            <accelerator>
                                                <KeyCodeCombination alt="UP" code="P" control="UP" meta="UP"
                                                                    shift="DOWN" shortcut="DOWN"/>
                                            </accelerator>
                                        </MenuItem>
                                        <SeparatorMenuItem mnemonicParsing="false"/>
                                        <MenuItem fx:id="closeMenuItem" mnemonicParsing="false" text="Close">
                                            <accelerator>
                                                <KeyCodeCombination alt="UP" code="W" control="UP" meta="UP" shift="UP"
                                                                    shortcut="DOWN"/>
                                            </accelerator>
                                        </MenuItem>
                                        <MenuItem fx:id="quitMenuItem" mnemonicParsing="false" text="Quit">
                                            <accelerator>
                                                <KeyCodeCombination alt="UP" code="Q" control="UP" meta="UP" shift="UP"
                                                                    shortcut="DOWN"/>
                                            </accelerator>
                                        </MenuItem>
                                    </items>
                                </Menu>
                                <Menu fx:id="editMenu" mnemonicParsing="false" text="Edit">
                                    <items>
                                        <MenuItem fx:id="undoMenuItem" mnemonicParsing="false" text="Undo">
                                            <accelerator>
                                                <KeyCodeCombination alt="UP" code="Z" control="UP" meta="UP" shift="UP"
                                                                    shortcut="DOWN"/>
                                            </accelerator>
                                        </MenuItem>
                                        <MenuItem fx:id="redoMenuItem" mnemonicParsing="false" text="Redo">
                                            <accelerator>
                                                <KeyCodeCombination alt="UP" code="Z" control="UP" meta="UP"
                                                                    shift="DOWN" shortcut="DOWN"/>
                                            </accelerator>
                                        </MenuItem>
                                        <SeparatorMenuItem mnemonicParsing="false"/>
                                        <MenuItem fx:id="cutMenuItem" mnemonicParsing="false" text="Cut">
                                            <accelerator>
                                                <KeyCodeCombination alt="UP" code="X" control="UP" meta="UP" shift="UP"
                                                                    shortcut="DOWN"/>
                                            </accelerator>
                                        </MenuItem>
                                        <MenuItem fx:id="copyMenuItem" mnemonicParsing="false" text="Copy">
                                            <accelerator>
                                                <KeyCodeCombination alt="UP" code="C" control="UP" meta="UP" shift="UP"
                                                                    shortcut="DOWN"/>
                                            </accelerator>
                                        </MenuItem>
                                        <MenuItem fx:id="copyNewickMenuItem" mnemonicParsing="false" text="Copy Newick">
                                            <accelerator>
                                                <KeyCodeCombination alt="UP" code="C" control="UP" meta="UP"
                                                                    shift="DOWN" shortcut="DOWN"/>
                                            </accelerator>
                                        </MenuItem>
                                        <MenuItem fx:id="pasteMenuItem" mnemonicParsing="false" text="Paste">
                                            <accelerator>
                                                <KeyCodeCombination alt="UP" code="V" control="UP" meta="UP" shift="UP"
                                                                    shortcut="DOWN"/>
                                            </accelerator>
                                        </MenuItem>
                                        <SeparatorMenuItem mnemonicParsing="false"/>
                                        <MenuItem fx:id="deleteMenuItem" mnemonicParsing="false" text="Delete">
                                            <accelerator>
                                                <KeyCodeCombination alt="UP" code="BACK_SPACE" control="UP" meta="UP"
                                                                    shift="UP" shortcut="DOWN"/>
                                            </accelerator>
                                        </MenuItem>
                                    </items>
                                </Menu>
                                <Menu mnemonicParsing="false" text="Select">
                                    <items>
                                        <MenuItem fx:id="selectAllMenuItem" mnemonicParsing="false" text="All">
                                            <accelerator>
                                                <KeyCodeCombination alt="UP" code="A" control="UP" meta="UP" shift="UP"
                                                                    shortcut="DOWN"/>
                                            </accelerator>
                                        </MenuItem>
                                        <MenuItem fx:id="selectNoneMenuItem" mnemonicParsing="false" text="None">
                                            <accelerator>
                                                <KeyCodeCombination alt="UP" code="A" control="UP" meta="UP"
                                                                    shift="DOWN" shortcut="DOWN"/>
                                            </accelerator>
                                        </MenuItem>
                                        <MenuItem fx:id="selectInvertMenuItem" mnemonicParsing="false" text="Invert">
                                            <accelerator>
                                                <KeyCodeCombination alt="UP" code="I" control="UP" meta="UP" shift="UP"
                                                                    shortcut="DOWN"/>
                                            </accelerator>
                                        </MenuItem>
                                        <SeparatorMenuItem mnemonicParsing="false"/>
                                        <MenuItem fx:id="selectLeavesMenuItem" mnemonicParsing="false" text="Leaves">
                                            <accelerator>
                                                <KeyCodeCombination alt="UP" code="L" control="UP" meta="UP" shift="UP"
                                                                    shortcut="DOWN"/>
                                            </accelerator>
                                        </MenuItem>
                                        <MenuItem fx:id="selectTreeNodesMenuItem" mnemonicParsing="false"
                                                  text="Tree Nodes">
                                            <accelerator>
                                                <KeyCodeCombination alt="UP" code="T" control="UP" meta="UP" shift="UP"
                                                                    shortcut="DOWN"/>
                                            </accelerator>
                                        </MenuItem>
                                        <MenuItem fx:id="selectReticulateNodesMenuitem" mnemonicParsing="false"
                                                  text="Reticulate Nodes">
                                            <accelerator>
                                                <KeyCodeCombination alt="UP" code="R" control="UP" meta="UP" shift="UP"
                                                                    shortcut="DOWN"/>
                                            </accelerator>
                                        </MenuItem>
                                        <SeparatorMenuItem mnemonicParsing="false"/>
                                        <MenuItem fx:id="selectVisibleNodesMenuItem" mnemonicParsing="false"
                                                  text="Visible Reticulations">
                                            <accelerator>
                                                <KeyCodeCombination alt="UP" code="R" control="UP" meta="UP"
                                                                    shift="DOWN" shortcut="DOWN"/>
                                            </accelerator>
                                        </MenuItem>
                                        <MenuItem fx:id="selectStableNodesMenuItem" mnemonicParsing="false"
                                                  text="Stable Nodes">
                                            <accelerator>
                                                <KeyCodeCombination alt="UP" code="T" control="UP" meta="UP"
                                                                    shift="DOWN" shortcut="DOWN"/>
                                            </accelerator>
                                        </MenuItem>
                                        <SeparatorMenuItem mnemonicParsing="false"/>
                                        <MenuItem fx:id="selectAllBelowMenuItem" mnemonicParsing="false"
                                                  text="All Below">
                                            <accelerator>
                                                <KeyCodeCombination alt="UP" code="B" control="UP" meta="UP" shift="UP"
                                                                    shortcut="DOWN"/>
                                            </accelerator>
                                        </MenuItem>
                                        <MenuItem fx:id="selectAllAboveMenuItem" mnemonicParsing="false"
                                                  text="All Above">
                                            <accelerator>
                                                <KeyCodeCombination alt="UP" code="B" control="UP" meta="UP"
                                                                    shift="DOWN" shortcut="DOWN"/>
                                            </accelerator>
                                        </MenuItem>
                                    </items>
                                </Menu>
                                <Menu mnemonicParsing="false" text="Options">
                                    <items>
                                        <MenuItem fx:id="labelLeavesABCMenuItem" mnemonicParsing="false"
                                                  text="Label Leaves A,B,C..."/>
                                        <MenuItem fx:id="labelLeaves123MenuItem" mnemonicParsing="false"
                                                  text="Label Leaves 1,2,3..."/>
                                        <SeparatorMenuItem mnemonicParsing="false"/>
                                        <MenuItem fx:id="labelLeavesMenuItem" mnemonicParsing="false"
                                                  text="Label Leaves...">
                                            <accelerator>
                                                <KeyCodeCombination alt="UP" code="L" control="UP" meta="UP"
                                                                    shift="DOWN" shortcut="DOWN"/>
                                            </accelerator>
                                        </MenuItem>
                                    </items>
                                </Menu>
                                <Menu mnemonicParsing="false" text="View">
                                    <items>
                                        <MenuItem fx:id="increaseFontSizeMenuItem" text="Increase Font Size">
                                            <accelerator>
                                                <KeyCodeCombination alt="UP" code="PLUS" control="UP" meta="UP"
                                                                    shift="UP" shortcut="DOWN"/>
                                            </accelerator>
                                        </MenuItem>
                                        <MenuItem fx:id="decreaseFontSizeMenuItem" text="Decrease Font Size">
                                            <accelerator>
                                                <KeyCodeCombination alt="UP" code="MINUS" control="UP" meta="UP"
                                                                    shift="UP" shortcut="DOWN"/>
                                            </accelerator>
                                        </MenuItem>
                                        <SeparatorMenuItem mnemonicParsing="false"/>
                                        <MenuItem fx:id="zoomInVerticallyMenuItem" text="Zoom In Vertically">
                                            <accelerator>
                                                <KeyCodeCombination alt="UP" code="UP" control="UP" meta="UP" shift="UP"
                                                                    shortcut="DOWN"/>
                                            </accelerator>
                                        </MenuItem>
                                        <MenuItem fx:id="zoomOutVerticallyMenuItem" text="Zoom Out Vertically">
                                            <accelerator>
                                                <KeyCodeCombination alt="UP" code="DOWN" control="UP" meta="UP"
                                                                    shift="UP" shortcut="DOWN"/>
                                            </accelerator>
                                        </MenuItem>
                                        <MenuItem fx:id="zoomInHorizontallyMenuItem" text="Zoom In Horizontally">
                                            <accelerator>
                                                <KeyCodeCombination alt="UP" code="LEFT" control="UP" meta="UP"
                                                                    shift="UP" shortcut="DOWN"/>
                                            </accelerator>
                                        </MenuItem>
                                        <MenuItem fx:id="zoomOutHorizontallyMenuItem" text="Zoom Out Horizontally">
                                            <accelerator>
                                                <KeyCodeCombination alt="UP" code="LEFT" control="UP" meta="UP"
                                                                    shift="UP" shortcut="DOWN"/>
                                            </accelerator>
                                        </MenuItem>

                                        <SeparatorMenuItem mnemonicParsing="false"/>

                                        <MenuItem fx:id="enterFullScreenMenuItem" mnemonicParsing="false"
                                                  text="Enter Fullscreen">
                                            <accelerator>
                                                <KeyCodeCombination alt="UP" code="F" control="DOWN" meta="UP"
                                                                    shift="UP" shortcut="DOWN"/>
                                            </accelerator>
                                        </MenuItem>
                                    </items>
                                </Menu>
                                <Menu fx:id="windowMenu" mnemonicParsing="false" text="Window">
                                    <items>
                                        <MenuItem fx:id="aboutMenuItem" mnemonicParsing="false" text="About">
                                            <accelerator>
                                                <KeyCodeCombination alt="UP" code="H" control="UP" meta="UP" shift="UP"
                                                                    shortcut="DOWN"/>
                                            </accelerator>
                                        </MenuItem>
                                        <SeparatorMenuItem mnemonicParsing="false"/>
                                    </items>
                                </Menu>
                            </menus>
                        </MenuBar>
                        <ToolBar fx:id="toolBar" prefHeight="40.0" prefWidth="200.0">
                            <items>
                                <Button fx:id="openButton" contentDisplay="GRAPHIC_ONLY" mnemonicParsing="false"
                                        text="Open">
                                    <graphic>
                                        <ImageView fitHeight="16.0" fitWidth="16.0" pickOnBounds="true"
                                                   preserveRatio="true">
                                            <image>
                                                <Image url="@/jloda/resources/icons/sun/Open16.gif"/>
                                            </image>
                                        </ImageView>
                                    </graphic>
                                </Button>
                                <Separator maxHeight="-Infinity" minHeight="-Infinity" orientation="VERTICAL"
                                           prefHeight="16.0"/>
                                <Button fx:id="saveButton" contentDisplay="GRAPHIC_ONLY" layoutX="46.0" layoutY="11.0"
                                        mnemonicParsing="false" text="Save">
                                    <graphic>
                                        <ImageView fitHeight="16.0" fitWidth="16.0" pickOnBounds="true"
                                                   preserveRatio="true">
                                            <image>
                                                <Image url="@/jloda/resources/icons/sun/Save16.gif"/>
                                            </image>
                                        </ImageView>
                                    </graphic>
                                </Button>
                                <Button fx:id="exportButton" contentDisplay="GRAPHIC_ONLY" layoutX="105.0"
                                        layoutY="11.0" mnemonicParsing="false" text="Export">
                                    <graphic>
                                        <ImageView fitHeight="16.0" fitWidth="16.0" pickOnBounds="true"
                                                   preserveRatio="true">
                                            <image>
                                                <Image url="@/jloda/resources/icons/sun/Export16.gif"/>
                                            </image>
                                        </ImageView>
                                    </graphic>
                                    <tooltip>
                                        <Tooltip text="Export Extended Newick "/>
                                    </tooltip>
                                </Button>
                                <Separator layoutX="63.0" layoutY="16.0" maxHeight="-Infinity" minHeight="-Infinity"
                                           orientation="VERTICAL" prefHeight="16.0"/>
                                <Button fx:id="printButton" contentDisplay="GRAPHIC_ONLY" layoutX="149.0" layoutY="11.0"
                                        mnemonicParsing="false" text="Print">
                                    <graphic>
                                        <ImageView fitHeight="16.0" fitWidth="16.0" pickOnBounds="true"
                                                   preserveRatio="true">
                                            <image>
                                                <Image url="@/jloda/resources/icons/sun/Print16.gif"/>
                                            </image>
                                        </ImageView>
                                    </graphic>
                                </Button>
                                <Separator layoutX="128.0" layoutY="16.0" maxHeight="-Infinity" minHeight="-Infinity"
                                           orientation="VERTICAL" prefHeight="16.0"/>
                            </items>
                        </ToolBar>
                    </children>
                </VBox>
            </top>
            <bottom>
                <FlowPane fx:id="statusFlowPane" alignment="CENTER_LEFT" hgap="5.0" maxWidth="1.7976931348623157E308"
                          minHeight="-Infinity" prefHeight="32.0"
                          style="-fx-background-color: #f4f4f4; -fx-border-color: lightgray;" vgap="5.0">
                    <padding>
                        <Insets left="10.0" right="10.0"/>
                    </padding>
                </FlowPane>
            </bottom>
            <center>
                <ScrollPane fx:id="scrollPane" BorderPane.alignment="CENTER">
                    <content>
                        <Pane fx:id="mainPane"/>
                    </content>
                </ScrollPane>
            </center>
        </BorderPane>
        <Label fx:id="selectionLabel" style="-fx-background-color: transparent;" text="Selection" textFill="GREY"
               AnchorPane.bottomAnchor="8.0" AnchorPane.rightAnchor="30.0"/>
        <Label fx:id="infoLabel"
               text="Double-click on window to create new node. Shift-drag on node to create new edge."
               AnchorPane.leftAnchor="50.0" AnchorPane.topAnchor="100.0">
            <font>
                <Font size="14.0"/>
            </font>
        </Label>
    </children>
</AnchorPane>
