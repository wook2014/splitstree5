<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<BorderPane maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" prefHeight="300.0" prefWidth="400.0"
            xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="splitstree5.dialogs.imports.ImportDialogController">
    <bottom>
        <HBox minHeight="40.0" style="-fx-border-color: lightgray;" BorderPane.alignment="CENTER">
            <children>
                <ProgressBar fx:id="progressBar" maxWidth="1.7976931348623157E308" progress="0.0" HBox.hgrow="ALWAYS">
                    <padding>
                        <Insets top="5.0"/>
                    </padding>
                </ProgressBar>
                <Pane HBox.hgrow="ALWAYS"/>
                <Button fx:id="cancelButton" cancelButton="true" mnemonicParsing="false" text="Cancel"
                        HBox.hgrow="NEVER"/>
                <Button fx:id="importButton" defaultButton="true" mnemonicParsing="false" text="Import"
                        HBox.hgrow="NEVER"/>
            </children>
            <padding>
                <Insets bottom="5.0" left="10.0" right="10.0" top="5.0"/>
            </padding>
        </HBox>
    </bottom>
    <center>
        <VBox fx:id="mainVBox" BorderPane.alignment="CENTER">
            <children>
                <HBox VBox.vgrow="NEVER">
                    <children>
                        <Label text="File:">
                            <HBox.margin>
                                <Insets bottom="5.0" left="5.0" right="5.0" top="10.0"/>
                            </HBox.margin>
                        </Label>
                        <TextField fx:id="fileTextField" minWidth="100.0" prefWidth="100.0" HBox.hgrow="ALWAYS">
                            <HBox.margin>
                                <Insets bottom="5.0" left="5.0" right="10.0" top="5.0"/>
                            </HBox.margin>
                        </TextField>
                        <Button fx:id="browseButton" mnemonicParsing="false" text="Browse...">
                            <HBox.margin>
                                <Insets bottom="5.0" left="5.0" right="10.0" top="5.0"/>
                            </HBox.margin>
                        </Button>
                    </children>
                </HBox>
                <HBox prefHeight="40.0" prefWidth="200.0">
                    <children>
                        <Pane prefHeight="200.0" prefWidth="200.0" HBox.hgrow="SOMETIMES"/>
                        <ComboBox fx:id="dataTypeComboBox" minWidth="-Infinity" promptText="Data type"
                                  HBox.hgrow="ALWAYS">
                            <HBox.margin>
                                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                            </HBox.margin>
                        </ComboBox>
                        <Pane prefHeight="200.0" prefWidth="200.0" HBox.hgrow="SOMETIMES"/>
                        <ComboBox fx:id="fileFormatComboBox" minWidth="-Infinity" promptText="File format"
                                  HBox.hgrow="ALWAYS">
                            <HBox.margin>
                                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                            </HBox.margin>
                        </ComboBox>
                        <Pane prefHeight="200.0" prefWidth="200.0" HBox.hgrow="SOMETIMES"/>
                    </children>
                </HBox>
            </children>
        </VBox>
    </center>
    <top>
        <Label text="Import Dialog" BorderPane.alignment="CENTER">
            <BorderPane.margin>
                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
            </BorderPane.margin>
        </Label>
    </top>
</BorderPane>
