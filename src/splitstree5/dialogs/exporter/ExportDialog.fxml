<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<BorderPane maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" prefHeight="112.0" prefWidth="400.0"
            xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="splitstree5.dialogs.exporter.ExportDialogController">
    <bottom>
        <HBox minHeight="0.0" prefWidth="393.0" spacing="5.0" style="-fx-border-color: lightgray;"
              BorderPane.alignment="CENTER">
            <children>
                <ProgressBar fx:id="progressBar" maxWidth="1.7976931348623157E308" progress="0.0" HBox.hgrow="ALWAYS">
                    <padding>
                        <Insets top="5.0"/>
                    </padding>
                </ProgressBar>
                <Button fx:id="optionsButton" cancelButton="true" layoutX="271.0" layoutY="16.0" mnemonicParsing="false"
                        text="Options"/>
                <Button fx:id="cancelButton" cancelButton="true" mnemonicParsing="false" text="Cancel"
                        HBox.hgrow="NEVER">
                    <HBox.margin>
                        <Insets left="3.0" right="3.0"/>
                    </HBox.margin>
                </Button>
                <Button fx:id="exportButton" defaultButton="true" mnemonicParsing="false" text="Export"
                        HBox.hgrow="NEVER">
                    <HBox.margin>
                        <Insets left="3.0" right="3.0"/>
                    </HBox.margin>
                </Button>
            </children>
            <padding>
                <Insets bottom="3.0" left="10.0" right="10.0" top="5.0"/>
            </padding>
        </HBox>
    </bottom>
    <center>
        <VBox fx:id="mainVBox" BorderPane.alignment="CENTER">
            <children>
                <HBox VBox.vgrow="NEVER"/>
                <HBox prefHeight="40.0" prefWidth="200.0">
                    <children>
                        <Pane prefHeight="200.0" prefWidth="200.0" HBox.hgrow="SOMETIMES"/>
                        <ComboBox fx:id="dataTypeComboBox" minWidth="-Infinity" promptText="Data type"
                                  HBox.hgrow="ALWAYS">
                            <HBox.margin>
                                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                            </HBox.margin>
                        </ComboBox>
                        <Pane prefHeight="200.0" prefWidth="200.0" HBox.hgrow="SOMETIMES"/>
                        <ComboBox fx:id="fileFormatComboBox" minWidth="-Infinity" promptText="File format"
                                  HBox.hgrow="ALWAYS">
                            <HBox.margin>
                                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                            </HBox.margin>
                        </ComboBox>
                        <Pane prefHeight="200.0" prefWidth="200.0" HBox.hgrow="SOMETIMES"/>
                    </children>
                </HBox>
            </children>
        </VBox>
    </center>
    <top>
        <Label text="Export Data from SplitsTree5" BorderPane.alignment="CENTER">
            <BorderPane.margin>
                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
            </BorderPane.margin>
        </Label>
    </top>
</BorderPane>
