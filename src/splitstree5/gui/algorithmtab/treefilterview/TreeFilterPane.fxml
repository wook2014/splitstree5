<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<HBox fx:id="hbox" alignment="CENTER" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308"
      xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="splitstree5.gui.algorithmtab.treefilterview.TreeFilterPaneController">
    <children>
        <VBox alignment="CENTER" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308"
              HBox.hgrow="ALWAYS">
            <children>
                <Label maxHeight="20.0" prefHeight="20.0" text="Active"/>
                <ListView fx:id="activeList" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308"
                          minHeight="100.0" prefWidth="200.0" VBox.vgrow="ALWAYS">
                    <VBox.margin>
                        <Insets bottom="5.0" left="5.0"/>
                    </VBox.margin>
                    <tooltip>
                        <Tooltip text="Active trees"/>
                    </tooltip>
                </ListView>
            </children>
            <opaqueInsets>
                <Insets/>
            </opaqueInsets>
        </VBox>
        <VBox alignment="CENTER" maxHeight="1.7976931348623157E308" maxWidth="-Infinity" prefWidth="50.0"
              HBox.hgrow="NEVER">
            <children>
                <Button fx:id="inactivateSelectedButton" mnemonicParsing="false" text="&gt;" VBox.vgrow="NEVER">
                    <tooltip>
                        <Tooltip text="Move selected active trees to inactive panel"/>
                    </tooltip>
                </Button>
                <Pane layoutX="10.0" layoutY="192.0" minWidth="50.0" prefHeight="20.0" prefWidth="50.0"/>
                <Button fx:id="inactivateAllButton" mnemonicParsing="false" text="&gt;&gt;" VBox.vgrow="NEVER">
                    <tooltip>
                        <Tooltip text="Move all trees to inactive panel"/>
                    </tooltip>
                </Button>
                <Pane prefHeight="20.0" prefWidth="50.0"/>
                <Button fx:id="activateSelectedButton" mnemonicParsing="false" text="&lt;" VBox.vgrow="NEVER">
                    <tooltip>
                        <Tooltip text="Move selected inactive trees to active panel"/>
                    </tooltip>
                </Button>
                <Pane layoutX="10.0" layoutY="271.0" prefHeight="20.0" prefWidth="100.0"/>
                <Button fx:id="activateAllButton" layoutX="38.0" layoutY="229.0" mnemonicParsing="false" text="&lt;&lt;"
                        VBox.vgrow="NEVER">
                    <tooltip>
                        <Tooltip text="Move all trees to active panel"/>
                    </tooltip>
                </Button>
                <Pane layoutX="10.0" layoutY="270.0" prefHeight="20.0" prefWidth="100.0"/>
                <Button fx:id="selectFullTrees" layoutX="18.0" layoutY="303.0" mnemonicParsing="false" text="Full">
                    <tooltip>
                        <Tooltip text="Select all trees that have the full taxon set"/>
                    </tooltip>
                </Button>
            </children>
        </VBox>
        <VBox alignment="CENTER" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308"
              HBox.hgrow="ALWAYS">
            <children>
                <Label prefHeight="20.0" text="Inactive" VBox.vgrow="NEVER"/>
                <ListView fx:id="inactiveList" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308"
                          minHeight="100.0" prefWidth="200.0" VBox.vgrow="ALWAYS">
                    <VBox.margin>
                        <Insets right="10.0"/>
                    </VBox.margin>
                    <padding>
                        <Insets bottom="5.0" right="5.0"/>
                    </padding>
                    <tooltip>
                        <Tooltip text="Inactive trees"/>
                    </tooltip>
                </ListView>
            </children>
            <opaqueInsets>
                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
            </opaqueInsets>
        </VBox>
    </children>
</HBox>
