<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.input.KeyCodeCombination?>
<?import javafx.scene.layout.*?>
<BorderPane prefHeight="350.0" prefWidth="300.0" xmlns="http://javafx.com/javafx/8.0.111"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="splitstree5.gui.connectorview.ConnectorViewController">
    <bottom>
        <ButtonBar minHeight="40.0" prefHeight="40.0" BorderPane.alignment="CENTER">
            <buttons>
                <Button fx:id="resetButton" mnemonicParsing="false" label="Reset">
                    <opaqueInsets>
                        <Insets/>
                    </opaqueInsets>
                </Button>
                <Button fx:id="cancelButton" mnemonicParsing="false" label="Cancel"/>
                <Button fx:id="applyButton" mnemonicParsing="false" label="Apply"/>
            </buttons>
            <padding>
                <Insets right="10.0"/>
            </padding>
        </ButtonBar>
    </bottom>
    <top>
        <MenuBar BorderPane.alignment="CENTER">
            <menus>
                <Menu mnemonicParsing="false" label="File">
                    <items>
                        <MenuItem fx:id="closeMenuItem" mnemonicParsing="false" label="Close">
                            <accelerator>
                                <KeyCodeCombination alt="UP" code="W" control="UP" meta="UP" shift="UP"
                                                    shortcut="DOWN"/>
                            </accelerator>
                        </MenuItem>
                    </items>
                </Menu>
                <Menu mnemonicParsing="false" label="Edit">
                    <items>
                        <MenuItem fx:id="undoMenuItem" mnemonicParsing="false" label="Undo">
                            <accelerator>
                                <KeyCodeCombination alt="UP" code="Z" control="UP" meta="UP" shift="UP"
                                                    shortcut="DOWN"/>
                            </accelerator>
                        </MenuItem>
                        <MenuItem fx:id="redoMenuItem" mnemonicParsing="false" label="Redo">
                            <accelerator>
                                <KeyCodeCombination alt="UP" code="Z" control="UP" meta="UP" shift="DOWN"
                                                    shortcut="DOWN"/>
                            </accelerator>
                        </MenuItem>
                    </items>
                </Menu>
                <Menu mnemonicParsing="false" label="Help">
                    <items>
                        <MenuItem fx:id="aboutMenuItem" mnemonicParsing="false" label="About"/>
                    </items>
                </Menu>
            </menus>
        </MenuBar>
    </top>
    <center>
        <BorderPane prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
            <top>
                <ChoiceBox fx:id="algorithmChoiceBox" prefWidth="150.0" BorderPane.alignment="CENTER"/>
            </top>
            <center>
                <Pane fx:id="centerPane" prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER"/>
            </center>
        </BorderPane>
    </center>
</BorderPane>
