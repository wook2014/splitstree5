<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<BorderPane fx:id="borderPane" prefHeight="350.0" prefWidth="500.0" xmlns="http://javafx.com/javafx/8.0.111"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="splitstree5.gui.connectorview.ConnectorViewController">
    <bottom>
        <GridPane maxWidth="1.7976931348623157E308" style="-fx-border-color: lightgray;">
            <columnConstraints>
                <ColumnConstraints halignment="LEFT" hgrow="ALWAYS" maxWidth="1.7976931348623157E308"/>
                <ColumnConstraints fillWidth="false" halignment="RIGHT" hgrow="NEVER" maxWidth="300.0" minWidth="240.0"
                                   prefWidth="240.0"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" vgrow="SOMETIMES"/>
            </rowConstraints>
            <children>
                <TextField fx:id="statusBar" editable="false" focusTraversable="false" maxWidth="1.7976931348623157E308"
                           promptText="SplitsTree5" style="-fx-background-color: transparent;"/>
                <ButtonBar GridPane.columnIndex="1" GridPane.hgrow="NEVER">
                    <buttons>
                        <Button fx:id="cancelButton" cancelButton="true" mnemonicParsing="false" text="Cancel"/>
                        <Button fx:id="applyButton" defaultButton="true" mnemonicParsing="false" text="Apply"/>
                    </buttons>
                    <padding>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                    </padding>
                </ButtonBar>
            </children>
        </GridPane>
    </bottom>
    <center>
        <BorderPane prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
            <top>
                <ComboBox fx:id="algorithmComboBox" minWidth="200.0" BorderPane.alignment="CENTER"/>
            </top>
            <center>
                <Pane fx:id="centerPane" prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER"/>
            </center>
        </BorderPane>
    </center>
</BorderPane>
